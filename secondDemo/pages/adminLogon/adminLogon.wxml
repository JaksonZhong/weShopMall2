<!--pages/adminLogon/adminLogon.wxml-->

<view class="container"> 
 
  <!-- <view class="login-icon"> 
    <image class="login-img" src="../../img/loginLog.jpg"></image> 
  </view>  -->
  <view class="adminLogon">管理员登录</view>
  <view class="login-from"> 
  <form bindsubmit='adminLogon' >
    <!--账号-->
    <view class="inputView"> 
      <image class="nameImage" src="../../images/username.png"></image> 
      <label class="loginLab">账号</label> 
      <input class="inputText" name="username" placeholder="请输入账号" /> 
    </view> 
    <view class="line"></view> 
    
    <!--密码-->
    <view class="inputView"> 
      <image class="keyImage" src="../../images/password.png"></image> 
      <label class="loginLab">密码</label> 
      <input class="inputText" password="true" name="password" placeholder="请输入密码"/> 
    </view> 
    
    <!--按钮-->
    <view class="loginBtnView"> 
      <button class="loginBtn" type="primary" form-type='submit' size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button> 
    </view> 

    </form>
  </view> 
</view>

