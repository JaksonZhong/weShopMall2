.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    /* float: left; */
    width: 325rpx;
    height: 330rpx;
    /* 上右下左 */
    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 175rpx;
    height: 175rpx;
    margin: 20rpx 0 10rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}
.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #AB956D;
    text-align: center;
}
.cart-no-data{
    padding:40rpx 0;
    color: #999;
